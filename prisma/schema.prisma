generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pupil {
  id         Int       @id @default(autoincrement())
  firstNames String
  lastName   String
  year       Int
  startDate  DateTime 
  endDate    DateTime?
  active     Boolean   @default(true)
  mat        Boolean   @default(false)
  eal        Boolean   @default(false)
  fsm        Boolean   @default(false)
  aln        Boolean   @default(false)
  lac        Boolean   @default(false)
  gender     String
  notes      String    @default("")

  records    Record[]
}

model User {
  firstNames     String
  lastName       String
  email          String   @id
  hashedPassword String
  years          String
  secret         Bytes
  lastRefresh    DateTime
  role           Role @default(USER)
}

enum Role {
  USER
  ADMIN
}

model Metric {
  id          Int  @id @default(autoincrement())
  name        String
  score1      String  
  score2      String  
  score3      String  
  score4      String  
  description String

  records     Record[]
}

model Record {
  id        Int @id @default(autoincrement())
  pupilId   Int
  metricId  Int
  score     Int
  note      String @default("")
  createdAt DateTime

  pupil     Pupil @relation(fields: [pupilId], references: [id])
  metric    Metric @relation(fields: [metricId], references: [id])
}
